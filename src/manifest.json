{
  "name": "Read Later",
  "version": "4.0.3",
  "manifest_version": 2,
  "description": "Store links to read later.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": ["core.js", "background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "commands": {
    "add-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Add current page to ReadLater"
    }
  }
}